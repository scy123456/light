<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/light_title_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入单词"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/light_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入想要高亮标注的单词"
        android:layout_alignBottom="@+id/light_title_1"
        android:layout_toRightOf="@+id/light_title_1"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/light_title_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/light_title_1"
        android:text="请输入例句"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/light_sentance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入想要高亮标注的单词"
        android:layout_alignBottom="@+id/light_title_2"
        android:layout_toRightOf="@+id/light_title_2"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"/>


    <TextView
        android:id="@+id/light_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/light_title_2"
        android:text="转化之后的句子"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/change"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/light_title_1"
        android:layout_marginTop="30dp"
        android:src="@drawable/go"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"/>
</RelativeLayout>